<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:name="com.example.android.popularmoviesapp.MoviesFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:context="com.example.android.popularmoviesapp.MoviesFragment"
        tools:ignore="MergeRootFrame"
        tools:layout="@android:layout/list_content" />

    <FrameLayout
        android:id="@+id/details_layout"
        android:name="com.example.android.popularmoviesapp.DetailsActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        tools:context="com.example.android.popularmoviesapp.DetailsFragment" />

</LinearLayout>
